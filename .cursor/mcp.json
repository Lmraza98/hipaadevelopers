{
  "mcpServers": {
    "taskmaster-ai": {
      "command": "npx",
      "args": [
        "./node_modules/.bin/task-master-ai",
        "mcp"
      ],

      "env": {
        "ANTHROPIC_API_KEY": "REMOVED",
        "PERPLEXITY_API_KEY": "REMOVED",
        "MODEL": "claude-3-7-sonnet-20250219",
        "PERPLEXITY_MODEL": "sonar-pro",
        "MAX_TOKENS": "64000",
        "TEMPERATURE": "0.2",
        "DEFAULT_SUBTASKS": "5",
        "DEFAULT_PRIORITY": "medium",
        "FASTMCP_FORCE_SIMPLE_UI": "true"
      },
      "enabled": true
    }
  }
}
